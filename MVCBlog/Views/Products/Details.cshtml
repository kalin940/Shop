@model MVCBlog.Models.ProductsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<div id="fh5co-product">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 animate-box">
                <div class="owl-carousel owl-carousel-fullwidth product-carousel">
                    @foreach (var item in Model.Imgs)
                    {
                        <div class="item">
                            <div class="active text-center">
                                <figure>
                                    <img src="@item" alt="user">
                                </figure>
                            </div>
                        </div>
                    }
         
                </div>
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                        <h2>@Model.ProductName</h2>
                        <p>
                            <a href="#" class="product-cart btn btn-primary btn-outline btn-lg" data-id="@Model.Id" data-product="@Model.ProductName" data-price="@Model.Price" data-status="@Model.Status" data-brand="@Model.Brand">Add to Cart</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="fh5co-tabs animate-box">
                    <ul class="fh5co-tab-nav">
                        <li class="active"><a href="#" data-tab="1"><span class="icon visible-xs"><i class="icon-file"></i></span><span class="hidden-xs">Product Details</span></a></li>
                        <li><a href="#" data-tab="2"><span class="icon visible-xs"><i class="icon-bar-graph"></i></span><span class="hidden-xs">Specification</span></a></li>
                        <li><a href="#" data-tab="3"><span class="icon visible-xs"><i class="icon-star"></i></span><span class="hidden-xs">Feedback &amp; Ratings</span></a></li>
                    </ul>
                    <!-- Tabs -->
                    <div class="fh5co-tab-content-wrap">
                        <div class="fh5co-tab-content tab-content active" data-tab-content="1">
                            <div class="col-md-10 col-md-offset-1">
                                <span class="price">SRP: $@Model.Price</span>
                                <h2>@Model.ProductName</h2>
                                @foreach (var item in Model.Description.Split('.'))
                                {
                                    <p>@item</p>
                                }

                            </div>
                        </div>
                        <div class="fh5co-tab-content tab-content" data-tab-content="2">
                            <div class="col-md-10 col-md-offset-1">
                                <h3>Product Specification</h3>
                                <ul>
                                    @foreach (var item in Model.Specification.Split('.'))
                                    {
                                        <li>@item</li>
                                     }
                                </ul>
                            </div>
                        </div>
                        <div class="fh5co-tab-content tab-content" data-tab-content="3">
                            <div class="col-md-10 col-md-offset-1">
                                <h3>Happy Buyers</h3>
                                <div class="feed">
                                @foreach (var item in Model.Feedback)
                                {
                                    <div>
                                        <blockquote>
                                            <p>@item.Info</p>
                                        </blockquote>
                                        <h3>&mdash; @item.Author</h3>
                                        <span class="rate">
                                            <i class="icon-star2"></i>
                                            <i class="icon-star2"></i>
                                            <i class="icon-star2"></i>
                                            <i class="icon-star2"></i>
                                            <i class="icon-star2"></i>
                                        </span>
                                    </div>
                                }  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/addToCart.js"></script>
