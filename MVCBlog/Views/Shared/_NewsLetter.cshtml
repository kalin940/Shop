@model MVCBlog.Models.NewsLetterViewModel
<div id="fh5co-started">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <h2>Newsletter</h2>
                <p>Just stay tune for our latest Product. Now you can subscribe</p>
            </div>
        </div>
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2">
                    @using (@Html.BeginForm("NewsLetterSubscribe", "Home", FormMethod.Post, new { @class = "form-inline" }))
                    { 
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            @*<input type="email" class="form-control" id="email" placeholder="Email">*@
                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control",@type= "email",@id= "email", @placeholder= "Email" })
                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-default btn-block">Subscribe</button>
                    </div>
                    }
            </div>
        </div>
    </div>
</div>
