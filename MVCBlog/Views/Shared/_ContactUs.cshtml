@model MVCBlog.Models.ContactUsViewModel
<div id="fh5co-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-push-1 animate-box">

                <div class="fh5co-contact-info">
                    <h3>Contact Information</h3>
                    <ul>
                        <li class="address">Bulgaria,Sofia <br> Drujba 2</li>
                        <li class="phone"><a href="tel://+359895357540">+359895357540</a></li>
                        <li class="email"><a href="mailto:kalinpetrov@dir.bg">kalinpetrov@dir.bg</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 animate-box">
                <h3>Get In Touch</h3>
                @using (@Html.BeginForm("ContactUs", "Home", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-md-6">
                            <!-- <label for="fname">First Name</label> -->
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @type = "text", @id = "fname", @placeholder = "Your firstname" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                            @*<input type="text" id="fname" class="form-control" placeholder="Your firstname">*@
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @type = "text", @id = "lname", @placeholder = "Your lastname" })
                            <!-- <label for="lname">Last Name</label> -->
                            @*<input type="text" id="lname" class="form-control" placeholder="Your lastname">*@
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @type = "email", @id = "email", @placeholder = "Your email address" })
                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                            <!-- <label for="email">Email</label> -->
                            @*<input type="text" id="email" class="form-control" placeholder="Your email address">*@
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @type = "text", @id = "subject", @placeholder = "Your subject of this message" })
                            <!-- <label for="subject">Subject</label> -->
                            @*<input type="text" id="subject" class="form-control" placeholder="Your subject of this message">*@
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @name = "message", @cols = "30", @rows = "10", @id = "message", @placeholder = "Say something about us" })
                            <!-- <label for="message">Message</label> -->
                            @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Say something about us"></textarea>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary">
                    </div>
                }
            </div>
        </div>

    </div>
</div>
