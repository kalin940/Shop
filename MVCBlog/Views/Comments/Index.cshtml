@model IEnumerable<MVCBlog.Data.Comment>

@{
    ViewBag.Title = "Comments";
}

<h2>Comments</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post.Title) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author.FullName)
        </td>
        <td>
           @Html.ActionLink(item.Post.Title, "Details", "Posts", new { id = item.Post.Id },null)  @*@Html.DisplayFor(modelItem => item.Post.Title)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       @if (Roles.IsUserInRole(User.Identity.Name, "Administrators"))
       {
        <td>  
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })          
        </td>
        }
    </tr>
}

</table>
